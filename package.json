{
  "name": "retext-indefinite-article",
  "version": "1.1.3",
  "description": "Check if indefinite articles (`a`, `an`) are used correctly",
  "license": "MIT",
  "keywords": [
    "indefinite",
    "article",
    "articles",
    "a",
    "an",
    "retext"
  ],
  "repository": "retextjs/retext-indefinite-article",
  "bugs": "https://github.com/retextjs/retext-indefinite-article/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "lib",
    "index.js"
  ],
  "dependencies": {
    "nlcst-to-string": "^2.0.0",
    "number-to-words": "^1.2.3",
    "unist-util-is": "^2.0.0",
    "unist-util-visit": "^1.1.0"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "chalk": "^2.0.0",
    "esmangle": "^1.0.1",
    "nyc": "^11.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "retext": "^5.0.0",
    "tape": "^4.0.0",
    "xo": "^0.18.1"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify index.js --bare -s retextIndefiniteArticle > retext-indefinite-article.js",
    "build-mangle": "esmangle retext-indefinite-article.js > retext-indefinite-article.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "ignores": [
      "retext-indefinite-article.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
